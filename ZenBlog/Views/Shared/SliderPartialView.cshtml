@model IEnumerable<Post>
<!-- ======= Hero Slider Section ======= -->
<section id="hero-slider" class="hero-slider">
    <div class="container-md" data-aos="fade-in">
        <div class="row">
            <div class="col-12">
                <div class="swiper sliderFeaturedPosts">
                    <div class="swiper-wrapper">

                        @foreach (var item in Model)
                        {
                            <div class="swiper-slide">
                                <a  asp-controller="Post"
                                    asp-action="Post"
                                    asp-route-postId="@item.Id"
                                    asp-route-postTitle="@item.Title"
                                    asp-route-categoryTitle="@item.Category.Title"
                                    class="img-bg d-flex align-items-end" style="background-image: url('@(item.Image.Replace(@"\","/"))');">
                                    <div class="img-bg-inner">
                                        <h2>@item.Title</h2>
                                        <p>@Html.Raw(item.ShortDescription)</p>
                                    </div>
                                </a>
                            </div>

                        }

                    </div>
                    <div class="custom-swiper-button-next">
                        <span class="bi-chevron-right"></span>
                    </div>
                    <div class="custom-swiper-button-prev">
                        <span class="bi-chevron-left"></span>
                    </div>

                    <div class="swiper-pagination"></div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Hero Slider Section -->
