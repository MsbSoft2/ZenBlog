@model ZenBlog.Core.DTOs.LoginViewModel

@{
    ViewData["Title"] = "ورود";
}

<h1>ورود به سایت</h1>

<hr />
<div class="d-flex justify-content-center  align-items-center h-50vh my-lg-5" >

    <div class="col-lg-3 col-md-6 col-sm-10">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RemmeberMe"/> @Html.DisplayNameFor(model => model.RemmeberMe)
                </label>
            </div>
            <div class="form-group mb-4">
                <input type="submit" value="ورود" class="btn btn-primary w-100"/>
            </div>
        </form>
        <p>
            هنوز عضو نشده اید؟
            <a href="/Register" class="text-primary">عضویت در سایت</a>
        </p>
    </div>
    

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
